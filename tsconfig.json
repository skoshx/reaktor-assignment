    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2018",
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["dom", "es6", "es2017", "es2015.promise", "esnext"]
  }
}
